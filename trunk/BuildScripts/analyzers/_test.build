<?xml version="1.0" encoding="utf-8" ?>
<project name="TestRunnerPicker" default="go">
  <!-- Project UppercuT - http://uppercut.googlecode.com -->
  <!-- DO NOT EDIT THIS FILE - This follows a convention for testing with Integration tests being separated from Unit tests - find out more at http://uppercut.pbwiki.com -->
  <property name="build.config.settings" value="__NONE__" overwrite="false" />
  <include buildfile="${build.config.settings}" if="${file::exists(build.config.settings)}" />
  <property name="test.framework" value="mbunit" overwrite="false" />
  <property name="dirs.current" value="${directory::get-parent-directory(project::get-buildfile-path())}" />

  <target name="go" depends="run_tests" description="Analyzing project for quality indicators." />

  <target name="run_tests">
    <nant buildfile="${dirs.current}\_MbUnit.build" inheritall="true" if="${test.framework=='mbunit'}" />
    <nant buildfile="${dirs.current}\_nunit.build" inheritall="true" if="${test.framework=='nunit'}" />
    <call target="set_normal_failure_mode" />
  </target>

  <target name="all">
    <nant buildfile="${dirs.current}\_MbUnit.build" target="run_all_tests" inheritall="true" if="${test.framework=='mbunit'}" />
    <nant buildfile="${dirs.current}\_nunit.build" target="run_all_tests" inheritall="true" if="${test.framework=='nunit'}" />
    <call target="set_normal_failure_mode" />
  </target>

  <target name="open_results">
    <nant buildfile="${dirs.current}\_MbUnit.build" target="open_results" inheritall="true" if="${test.framework=='mbunit'}" />
    <nant buildfile="${dirs.current}\_nunit.build" target="open_results" inheritall="true" if="${test.framework=='nunit'}" />
  </target>

  <target name="set_normal_failure_mode">
    <property name="nant.onfailure" value="fail" />
  </target>

</project>